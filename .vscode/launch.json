{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "train",
            "type": "debugpy",
            "request": "launch",
            "module": "torch.distributed.run",
            "args": [
                "--nproc_per_node",
                "1",
                "--nnodes",
                "1",
                "--rdzv_endpoint",
                "127.0.0.1:29512",
                "--rdzv_id",
                "12345",
                "--rdzv_backend",
                "c10d",
                "train.py",
                "--deepspeed",
                "ds_config.json",
                "--dataset_cache_dir",
                "../hf_datasets/SlimPajama-627B",
                "--output_dir",
                "output/debug",
                "--config",
                "./configs/bdm_700m.json",
                "--resume_from_checkpoint",
                "true",
                "--per_device_train_batch_size",
                "1",
                "--gradient_accumulation_steps",
                "8",
                "--report_to",
                "none",
                "--max_steps",
                "5",
                "--context_len",
                "2048",
                "--warmup_ratio",
                "0.01",
                "--weight_decay",
                "0.1",
                "--learning_rate",
                "4e-4",
                "--adam_beta1",
                "0.9",
                "--adam_beta2",
                "0.98",
                "--save_steps",
                "5",
                "--logging_steps",
                "1",
                "--do_train",
                "True",
                "--do_predict",
                "True",
                "--save_strategy",
                "steps",
                "--gradient_checkpointing",
                "True",
                "--bf16",
                "True"
            ],
            "env": {
                "LOGLEVEL": "INFO",
                "TRITON_CACHE_DIR": "/tmp/triton_cache",
                "WANDB_MODE": "disabled",
                "CUDA_LAUNCH_BLOCKING": "1",
                "CUDA_VISIBLE_DEVICES": "0",
                "PYTORCH_CUDA_ALLOC_CONF": "expandable_segments:True"
            },
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "justMyCode": false
        }
    ]
}
